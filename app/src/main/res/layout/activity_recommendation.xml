<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".RecommendationActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your system will need the following components"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:gravity="center"/>

        <!-- Solars -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solar panel"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tvPanelNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:text=""
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvPanelsRated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/light_black"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Batteries -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Battery"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tvBatteryNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:text=""
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvBatteryRated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/light_black"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Charge controller -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charge Controller"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tvControllerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:text="A charge controller rated"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvControllerRated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/light_black"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Inverter -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inverter"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tvInverterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/light_black"
                    android:text="A inverter rated"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvInverterRated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:textColor="@color/light_black"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnSaveInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:text="SAVE RESULTS"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

</ScrollView>
